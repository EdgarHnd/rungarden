{
  "expo": {
    "name": "Run Garden",
    "slug": "run-garden",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rungarden",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "appleSignIn": true,
      "supportsTablet": false,
      "bundleIdentifier": "com.edgarhnd.rungarden",
      "deploymentTarget": "15.1",
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "aps-environment": "development"
      },
      "infoPlist": {
        "NSHealthShareUsageDescription": "Run Garden needs access to health data to track your running activities and grow plants in your garden.",
        "NSHealthUpdateUsageDescription": "Run Garden needs permission to write workout data to Apple Health to keep your fitness data synchronized.",
        "NSLocationWhenInUseUsageDescription": "Run Garden needs your location to record your runs and grow your plants.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Run Garden needs background location to continue recording your runs when the screen is locked or the app is in the background.",
        "LSApplicationQueriesSchemes": [
          "strava"
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "location",
          "processing"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0D1B2A"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.edgarhnd.rungarden",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "com.google.android.c2dm.permission.RECEIVE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0D1B2A"
        }
      ],
      [
        "@kingstinct/react-native-healthkit",
        {
          "NSHealthShareUsageDescription": "Run Garden needs access to health data to track your running activities and grow plants in your garden.",
          "NSHealthUpdateUsageDescription": "Run Garden needs permission to write workout data to Apple Health to keep your fitness data synchronized.",
          "background": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#D9D9D9",
          "defaultChannel": "default"
        }
      ],
      "expo-font",
      "expo-secure-store",
      "expo-apple-authentication",
      "expo-video",
      "expo-background-task"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ab6589c7-d93b-43dd-9741-ee894ebc64f4"
      }
    }
  }
}