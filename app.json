{
  "expo": {
    "name": "Blaze",
    "slug": "blaze",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "blaze",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "appleSignIn": true,
      "supportsTablet": false,
      "bundleIdentifier": "com.edgarhnd.blaze",
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "aps-environment": "development"
      },
      "infoPlist": {
        "NSHealthShareUsageDescription": "This app needs access to health data to track your running activities and provide insights about your fitness progress.",
        "NSHealthUpdateUsageDescription": "This app needs permission to write workout data to Apple Health to keep your fitness data synchronized.",
        "LSApplicationQueriesSchemes": [
          "strava",
          "strava"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#192B31"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.edgarhnd.blaze",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "com.google.android.c2dm.permission.RECEIVE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#192B31"
        }
      ],
      [
        "react-native-health",
        {
          "isClinicalDataEnabled": false,
          "healthSharePermission": "This app needs access to health data to track your running activities and provide insights about your fitness progress.",
          "healthUpdatePermission": "This app needs permission to write workout data to Apple Health to keep your fitness data synchronized."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#D9D9D9",
          "defaultChannel": "default"
        }
      ],
      "expo-font",
      "expo-secure-store",
      "expo-apple-authentication",
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0b6e768e-a95d-4f3d-a6a3-bdaf57f52c99"
      }
    }
  }
}